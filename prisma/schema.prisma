// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id      String     @id 
  email   String   @unique
  firstName    String?
  lastName    String?
  username    String @unique
  sheets    Sheet[]

  @@unique([firstName, lastName, username])
}

model Sheet {
  id    Int   @id @default(autoincrement())
  createdAt   DateTime
  authorEmail String 
  author    User    @relation(fields: [authorEmail], references: [email], onDelete: Cascade)
  system    String
  character Json
}